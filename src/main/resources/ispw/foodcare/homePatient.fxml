<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispw.foodcare.controller.guicontroller.HomePatientGuiController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="20" style="-fx-background-color: #b0c4de;" BorderPane.alignment="CENTER">
            <Label text="FoodCare" textFill="WHITE">
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
            <VBox.margin>
               <Insets top="50.0" />
            </VBox.margin>
            </Label>
            <Line endX="160.0" endY="0.0" startX="0.0" startY="0.0" stroke="WHITE" strokeWidth="3.0" />
            <Button fx:id="personalAreaButton" prefWidth="180" text="Area personale" onAction="#handlePersonalArea" />
            <Button fx:id="appointmentButton" prefWidth="180" text="Appuntamenti" onAction="#handleAppointments"/>
            <Button fx:id="historyButton" prefWidth="180" text="Storico" onAction="#handleHistory"/>
         <Button fx:id="logoutButton" onAction="#handleLogout" prefWidth="180" text="Log out">
            <VBox.margin>
               <Insets top="250.0" />
            </VBox.margin>
         </Button>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentArea" prefWidth="680.0" style="-fx-padding: 20" BorderPane.alignment="CENTER">
        </AnchorPane>
    </center>
</BorderPane>
