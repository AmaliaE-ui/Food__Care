<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="15" padding="20">
    <Label text="Gestione Disponibilità" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <DatePicker fx:id="datePicker" promptText="Seleziona una data"/>
    <TextField fx:id="startTimeField" promptText="Ora inizio (es. 09:00)"/>
    <TextField fx:id="endTimeField" promptText="Ora fine (es. 12:00)"/>

    <Button fx:id="saveAvailabilityButton" text="Salva disponibilità"/>
</VBox>