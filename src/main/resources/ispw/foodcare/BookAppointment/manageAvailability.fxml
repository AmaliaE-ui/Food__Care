<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20.0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispw.foodcare.controller.viewcontroller.ManageAvailabilityGuiController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestisci Disponibilità" />

    <DatePicker fx:id="datePicker" promptText="Seleziona la data" />

    <ListView fx:id="slotsListView" prefHeight="150" prefWidth="200" />

    <Button onAction="#handleAddAvailability" text="Aggiungi Disponibilità" />

    <Label alignment="CENTER" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Disponibilità" />

    <TableView fx:id="availabilityTableView" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="dateColumn" prefWidth="100" text="Data" />
            <TableColumn fx:id="startTimeColumn" prefWidth="100" text="Inizio" />
            <TableColumn fx:id="endTimeColumn" prefWidth="100" text="Fine" />
            <TableColumn fx:id="actionColumn" prefWidth="100" text="Azione" />
        </columns>
    </TableView>
</VBox>
